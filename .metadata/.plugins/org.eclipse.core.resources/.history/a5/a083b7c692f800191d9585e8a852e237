package com.lhq.zuulgateway.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.lhq.zuulgateway.HomeServiceProxy;
import com.lhq.zuulgateway.model.Post;
import com.lhq.zuulgateway.model.PostCata;

@RestController
public class PostManagermentController {
	
	@Autowired
	private HomeServiceProxy homeServiceProxy;
	
	@GetMapping("/")
	public String hello() {
		String hello = "hello";
		return hello;
	}
	@GetMapping("/post/{id}")
	public Post getPost(@PathVariable long id) {
		Post reponse = homeServiceProxy.getHouse(id);
		return new Post(reponse.getHouse_id(),
				reponse.getUser_id(),
				reponse.getCatalog(),
				reponse.getTitle(),
				reponse.getContent(),
				reponse.getPrice(),
				reponse.getArea(),
				reponse.getImage_url(),
				reponse.getCity(),
				reponse.getDistrict(),
				reponse.getAddress(),
				reponse.getBedroom(),
				reponse.getRestroom(),
				reponse.getFloor(),
				reponse.getCertification(),
				reponse.getDirection());
	}
	@GetMapping("/post")
	public List<PostCata> getAllHouse(){
		List<PostCata> reponse = homeServiceProxy.getallHouse();
		return reponse;
	}
	
	@PostMapping("/post/")
	public Post addNewPost(@RequestBody Post post) {
		Post exchange = homeServiceProxy.addHouse(post);
		return exchange;
	}
	
}

